<% if zip_code_workflow? %>
  <div class="budget-list__text card__text margin-bottom-0">
    <div>
      <% if voting_open? %>
        <% if show_full_description? %>
          <h3 class="text-left margin-bottom-0">
            <%= resource_title %>
          </h3>
        <% else %>
          <h3 class="text-left margin-bottom-0">
            <button class="link" data-open="project-modal-<%= model.id %>">
              <%= resource_title %>
            </button>
          </h3>
        <% end %>
      <% else %>
        <%= link_to resource_path, class: "link" do %>
          <h3 class="text-left margin-bottom-0">
            <%= cell("decidim/budgets/project_selected_status", model) %>
            <%= resource_title %>
          </h3>
        <% end %>
      <% end %>

      <div>
        <%= resource_text %>
      </div>
      <% if !show_full_description? %>
        <% if voting_open? %>
          <button class="link" data-open="project-modal-<%= model.id %>">
            <%= t ".read_more" %>
          </button>
        <% else %>
          <%= link_to t(".read_more"), resource_path, class: "link" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="budget-list__text card__text">
    <div>
      <%= link_to resource_path, class: "card__link" do %>
        <h3 class="card__title budget-list__title">
          <%= cell("decidim/budgets/project_selected_status", model) %>

          <%= resource_title %>
        </h3>
      <% end %>

      <div class="show-for-medium">
        <%= cell "decidim/budgets/project_tags", model, context: { extra_classes: ["tags--project"] } %>
      </div>

      <div class="budget-list__data__number budget-list__number hide-for-medium">
        <%= cell("decidim/budgets/project_votes_count",
        model,
        layout: :one_line) %>

        <%= cell("decidim/budgets/project_voted_hint", model, class: "margin-left-1") if current_order_checked_out? && resource_added? %>
      </div>
    </div>
  </div>
<% end %>
