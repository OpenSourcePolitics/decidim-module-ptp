<%= action_authorized_button_to(
  "vote",
  budget_order_line_item_path(model.budget, project_id: model, show_only_added: options[:show_only_added], view_mode: options[:view_mode]),
  method: vote_button_method,
  remote: true,
  class: "button #{scale_up} budget-list__action project__vote-button button__secondary customized-budget display-block project-#{project.id}-vote-button ",
  data: {
    add: !resource_added?,
    disable: true,
    budget: model.budget_amount,
    project_id: model.id,
    allocation: resource_allocation,
    "redirect-url": budget_projects_path(model.budget)
  },
  disabled: vote_button_disabled?,
  title: vote_button_label
 ) do %>
  <%= resource_added? ? t("remove_from_vote", scope: "decidim.budgets.project_vote_button") :t("add_to_vote", scope: "decidim.budgets.project_vote_button") %>
<% end %>

